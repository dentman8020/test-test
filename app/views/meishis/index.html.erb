<h1>名刺一覧</h1>
<%= link_to '名刺入力', new_meishi_path, class:'btn btn_primary'%>

<table>
  <tr>
    <th>n</th>
    <th>n*n</th>
  </tr>
  <% (1..10).each do |n|%>
  <tr>
    <th>
      <%= n %>
    </th>
    <th>
      <%= n*n %>
    </th>
  </tr>
  <% end %>
</table>

<table>
    <tr>
      <th>id</th>
      <th>name</th>
    </tr>
    <% @meishis.each do |meishi|%>
    <tr>
      <th>
        <%= meishi.id %>
      </th>
      <th>
         <%= link_to meishi.name, meishi %>
      </th>
       <th>
        <%= link_to '削除', meishi_path(meishi), method: :delete %>
        </th>
    </tr>
    <% end %>
  </table>
  

  <table>
      <tr>
        <th>id</th>
        <th>created_at</th>
        <th>name</th>
        <th>intro</th>
